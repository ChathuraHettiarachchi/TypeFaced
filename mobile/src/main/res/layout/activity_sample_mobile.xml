<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sample_mobile"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chootdev.sample.SampleMobileActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"/>

    <com.chootdev.typefaced.TypeFacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:textView_font="Precious.ttf"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Button"/>

    <com.chootdev.typefaced.TypeFacedButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:button_font="Gingerbread House.ttf"
        android:textSize="20sp"
        android:text="Looks scary"
        android:id="@+id/btn"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="EditText"/>

    <com.chootdev.typefaced.TypeFacedEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:editText_font="Shutdown!.ttf"
        android:hint="Type here"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/edt"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Radio button"/>

    <com.chootdev.typefaced.TypeFacedRadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is radio"
        app:radiobutton_font="Gypsy Curse.ttf"
        android:textSize="20sp"
        android:id="@+id/radio"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Checkbox"/>

    <com.chootdev.typefaced.TypeFacedCheckbox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test checkbox"
        app:checkbox_font="Precious.ttf"
        android:textSize="20sp"
        android:id="@+id/check"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Toggle button"/>

    <com.chootdev.typefaced.TypeFacedToggleButton
        android:text="ToggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        app:togglebutton_font="Gingerbread House.ttf"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#D3D3D3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Switch"/>

    <com.chootdev.typefaced.TypeFacedSwitch
        android:text="Switch mee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switc"
        app:switch_font="Precious.ttf"
        android:layout_centerHorizontal="true"/>
</LinearLayout>
